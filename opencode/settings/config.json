{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "nx-mcp": {
      "command": [
        "npx",
        "-y",
        "nx-mcp@latest",
        "."
      ],
      "enabled": true,
      "type": "local"
    },
    "sequential-thinking": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true,
      "type": "local"
    }
  },
  "permission": {
    "bash": {
      "*": "allow",
      "git add": "ask"
    },
    "edit": "allow",
    "webfetch": "allow"
  }
}
